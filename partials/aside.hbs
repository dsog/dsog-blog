<aside class="cover expanded" style="background: #000;">
  <div class="cover expanded background-image">
  </div>
  <div class="cover container expanded">
    <div class="profile">
      {{#if @blog.logo}}
      <a id="avatar-link" href="{{@blog.url}}">
        <img src="{{@blog.logo}}" alt="{{@blog.title}} avatar" class="profile avatar rounded" />
        <h1 id="profile-title">{{@blog.title}}</h1>
        <h3 id="profile-resume"></h3>
      </a>
      {{/if}}

      <hr class="divider long" />
      <p>{{@blog.description}}</p>
      <hr class="divider short" />
      <div class="navigation">
        <div class="profile contact">
          {{navigation}}
          {{> social}}
          {{> search }}
        </div>
      </div>
    </div>
  </div>
</aside>
